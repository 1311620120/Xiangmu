<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    >
    <!-- 注册页面 -->



    <!-- 注册手机号 -->
    <EditText
        android:id="@+id/reg_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="36dp"
        android:paddingLeft="25dp"
        android:inputType="number"
        android:hint="手机号"
        android:maxLength="11"
        android:textColorHint="#ffffff"
        android:textSize="16sp"
        android:background="@null"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        />
    <View
        android:id="@+id/reg_view_phone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/reg_edit_phone"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        />
    <ImageView
        android:id="@+id/reg_image_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/reg_edit_phone"
        app:layout_constraintBottom_toBottomOf="@id/reg_edit_phone"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/login_icon_phone"
        />

    <!-- 验证码 -->
    <EditText
        android:id="@+id/reg_edit_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reg_edit_phone"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="36dp"
        android:background="@null"
        android:maxLength="4"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:hint="验证码"
        android:textColorHint="#ffffff"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        />
    <TextView
        android:id="@+id/reg_text_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="获取验证码"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="@id/reg_edit_verification"
        app:layout_constraintBottom_toBottomOf="@id/reg_edit_verification"
        app:layout_constraintTop_toTopOf="@id/reg_edit_verification"
        />
    <View
        android:id="@+id/reg_view_verification"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/reg_edit_verification"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        />
    <ImageView
        android:id="@+id/reg_image_pass_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/reg_edit_verification"
        app:layout_constraintBottom_toBottomOf="@id/reg_edit_verification"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/register_icon_verification"
        />

    <!-- 注册密码 -->
    <EditText
        android:id="@+id/reg_edit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reg_edit_verification"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="36dp"
        android:background="@null"
        android:maxLength="22"

        android:password="true"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:hint="登录密码"
        android:textColorHint="#ffffff"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        />
    <View
        android:id="@+id/reg_view_pass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/reg_edit_pass"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        />
    <ImageView
        android:id="@+id/reg_image_pass_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/reg_edit_pass"
        app:layout_constraintBottom_toBottomOf="@id/reg_edit_pass"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/login_icon_lock"
        />
    <ImageView
        android:id="@+id/reg_image_pass_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/reg_edit_pass"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/login_icon_eye"
        app:layout_constraintRight_toRightOf="@id/reg_edit_pass"
        />

    <!-- 返回登录页面 -->
    <TextView
        android:id="@+id/reg_text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reg_text_login"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="@id/reg_edit_pass"
        app:layout_constraintTop_toBottomOf="@id/reg_edit_pass"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        />

    <!-- 注册按钮 -->
    <Button
        android:id="@+id/reg_button_login"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp"
        android:background="@drawable/be"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="#ff5f71"
        />

</android.support.constraint.ConstraintLayout>